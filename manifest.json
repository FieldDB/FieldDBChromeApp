{
	"name": "Video Player",
	"description": "Features network media discovery and playlist management",
	"version": "1.0.0",
	"manifest_version": 2,
	"offline_enabled": true,
	"app": {
		"background": {
			"scripts": [
				"background.js"
			]
		}
	},

	"icons": {
		"16": "assets/calculator-16.png",
		"128": "assets/calculator-128.png"
	},

	"sandbox": {
		"pages": ["index.html"],
		"content_security_policy": "sandbox allow-scripts; default-src 'self' chrome-extension-resource: 'unsafe-eval'; "
	},

	"permissions": [
		"https://*/*",
		"experimental",
		"unlimitedStorage", {
			"socket": [
				"tcp-connect",
				"udp-send-to",
				"udp-bind"
			]
		}
	]
}
